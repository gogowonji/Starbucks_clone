<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50px"
        android:layout_marginStart="10px"
        android:layout_marginTop="10px"
        android:layout_marginEnd="10px"
        android:layout_marginBottom="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:text="Welcome to Starbucks clone app"
                android:textColor="#000000"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/whatsnew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="#00FFFFFF"
                    android:text="What's New"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="#00FFFFFF"
                    android:text="Coupon"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/alert"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:drawable/btn_star" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="wonji"
                    android:textColor="@color/starbucks_main"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:text="님을 위한 추천메뉴"
                    android:textColor="#272727"
                    android:textSize="30sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/coffee1"
                        android:layout_width="160dp"
                        android:layout_height="160dp" />

                    <Button
                        android:id="@+id/coffee2"
                        android:layout_width="160dp"
                        android:layout_height="160dp" />

                    <Button
                        android:id="@+id/coffee3"
                        android:layout_width="160dp"
                        android:layout_height="160dp" />

                    <Button
                        android:id="@+id/coffee4"
                        android:layout_width="160dp"
                        android:layout_height="160dp" />

                    <Button
                        android:id="@+id/coffee5"
                        android:layout_width="160dp"
                        android:layout_height="160dp" />

                    <Button
                        android:id="@+id/coffee6"
                        android:layout_width="160dp"
                        android:layout_height="160dp" />

                    <Button
                        android:id="@+id/coffee7"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:text="Button" />
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                app:srcCompat="@drawable/poster1" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>